{
  "name": "CSS Gridish",
  "version": "1.0.1",
  "manifest_version": 2,
  "description":
    "Check how a webpage aligns with your grid design generated by CSS Gridish",
  "homepage_url": "https://github.com/ibm/css-gridish",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "CSS Gridish",
    "default_popup": "src/browserAction/browserAction.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["src/inject/inject.css"]
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/inject/inject.js"]
    }
  ],
  "permissions": ["tabs", "storage", "http://*/*", "https://*/*"]
}
